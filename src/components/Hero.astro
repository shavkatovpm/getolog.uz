<style>
  .hero {
    padding: 140px 0 100px;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: -200px;
    right: -200px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero__inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  .hero__badge {
    display: inline-block;
    padding: 6px 16px;
    background: var(--accent-glow);
    color: var(--accent);
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .hero__title {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 20px;
    letter-spacing: -0.5px;
  }

  .hero__subtitle {
    font-size: 1.15rem;
    color: var(--light-400);
    line-height: 1.7;
    margin-bottom: 32px;
    max-width: 500px;
  }

  .hero__actions {
    display: flex;
    gap: 16px;
    margin-bottom: 48px;
  }

  .hero__stats {
    display: flex;
    gap: 32px;
    align-items: center;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat__number {
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--white);
  }

  .stat__label {
    font-size: 0.85rem;
    color: var(--light-400);
  }

  .stat__divider {
    width: 1px;
    height: 40px;
    background: var(--dark-600);
  }

  /* Phone Mockup */
  .phone-mockup {
    width: 320px;
    margin: 0 auto;
    background: var(--dark-800);
    border-radius: 36px;
    padding: 12px;
    border: 1px solid var(--dark-600);
    box-shadow: 0 40px 80px rgba(0, 0, 0, 0.4);
    position: relative;
  }

  .phone-mockup__notch {
    width: 120px;
    height: 28px;
    background: var(--dark);
    border-radius: 0 0 16px 16px;
    margin: 0 auto 0;
    position: relative;
    z-index: 2;
  }

  .phone-mockup__screen {
    background: var(--dark-700);
    border-radius: 24px;
    overflow: hidden;
    margin-top: -14px;
  }

  .chat-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px 16px 12px;
    background: var(--dark-800);
    border-bottom: 1px solid rgba(230, 233, 255, 0.06);
  }

  .chat-header__avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--accent);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .chat-header__name {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .chat-header__status {
    font-size: 0.75rem;
    color: var(--success);
  }

  .chat-demo {
    padding: 16px 12px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-height: 380px;
    overflow: hidden;
  }

  .chat-msg {
    display: flex;
  }

  .chat-msg--user {
    justify-content: flex-end;
  }

  .chat-msg__bubble {
    max-width: 85%;
    padding: 10px 14px;
    border-radius: 16px;
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .chat-msg--bot .chat-msg__bubble {
    background: var(--dark-800);
    border-bottom-left-radius: 4px;
  }

  .chat-msg--user .chat-msg__bubble {
    background: var(--accent);
    color: var(--white);
    border-bottom-right-radius: 4px;
  }

  .success-msg .chat-msg__bubble {
    border: 1px solid rgba(74, 222, 128, 0.2);
    background: rgba(74, 222, 128, 0.08);
  }

  .invite-link {
    color: var(--accent);
    font-weight: 600;
    text-decoration: underline;
  }

  .chat-buttons {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .chat-btn {
    display: block;
    padding: 8px 14px;
    background: transparent;
    border: 1px solid var(--dark-600);
    border-radius: 10px;
    font-size: 0.8rem;
    text-align: center;
    color: var(--accent);
    cursor: default;
    transition: all var(--transition);
  }

  @media (max-width: 968px) {
    .hero__inner {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero__subtitle {
      margin: 0 auto 32px;
    }

    .hero__actions {
      justify-content: center;
    }

    .hero__stats {
      justify-content: center;
    }

    .hero__visual {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 120px 0 72px;
    }

    .hero__actions {
      flex-direction: column;
    }

    .hero__stats {
      gap: 20px;
    }

    .stat__number {
      font-size: 1.15rem;
    }
  }
</style>
