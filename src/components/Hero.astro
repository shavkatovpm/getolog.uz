<style>
  .hero {
    padding: 70px 0 60px;
    position: relative;
    overflow-x: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero__floating-lights {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
  }

  .light {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(139, 142, 255, 0.3) 0%, rgba(139, 142, 255, 0.1) 40%, transparent 70%);
    filter: blur(20px);
    animation: float-around 20s ease-in-out infinite;
  }

  .light--2 {
    width: 100px;
    height: 100px;
    top: 40%;
    right: 60%;
    animation-delay: 3s;
    animation-duration: 20s;
  }

  .light--3 {
    width: 120px;
    height: 120px;
    top: 70%;
    right: 20%;
    animation-delay: 6s;
    animation-duration: 22s;
  }

  .light--4 {
    width: 80px;
    height: 80px;
    top: 25%;
    right: 80%;
    animation-delay: 9s;
    animation-duration: 18s;
  }

  .light--5 {
    width: 110px;
    height: 110px;
    top: 55%;
    right: 40%;
    animation-delay: 12s;
    animation-duration: 24s;
  }

  .light--6 {
    width: 90px;
    height: 90px;
    top: 85%;
    right: 70%;
    animation-delay: 15s;
    animation-duration: 21s;
  }

  @keyframes float-around {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.2;
    }
    25% {
      transform: translate(-100px, 80px) scale(1.2);
      opacity: 0.4;
    }
    50% {
      transform: translate(120px, -60px) scale(0.9);
      opacity: 0.25;
    }
    75% {
      transform: translate(-80px, 100px) scale(1.1);
      opacity: 0.35;
    }
  }

  .hero__inner {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    gap: 80px;
    align-items: center;
  }

  .hero__badge {
    display: inline-block;
    padding: 8px 18px;
    background: var(--accent-glow);
    color: var(--accent);
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 24px;
    border: 1px solid rgba(139, 142, 255, 0.2);
    opacity: 0;
  }

  .hero__title {
    font-size: clamp(2.5rem, 5.5vw, 3.75rem);
    font-weight: 800;
    line-height: 1.15;
    margin-bottom: 24px;
    letter-spacing: -1px;
    opacity: 0;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    color: var(--light-400);
    line-height: 1.75;
    margin-bottom: 40px;
    max-width: 540px;
    opacity: 0;
  }

  .hero__actions {
    display: flex;
    gap: 16px;
    margin-bottom: 56px;
    opacity: 0;
  }

  .hero__stats {
    display: flex;
    gap: 36px;
    align-items: center;
    opacity: 0;
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .stat__number {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--white);
    letter-spacing: -0.5px;
  }

  .stat__label {
    font-size: 0.85rem;
    color: var(--light-400);
    font-weight: 500;
  }

  .stat__divider {
    width: 1px;
    height: 44px;
    background: linear-gradient(to bottom, transparent, var(--dark-600), transparent);
  }

  /* Phone Mockup */
  .hero__visual {
    opacity: 0;
    position: relative;
    padding: 50px 40px 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .phone-mockup {
    width: 100%;
    max-width: 360px;
    margin: 0 auto;
    background: rgba(45, 42, 45, 0.6);
    backdrop-filter: blur(20px);
    border-radius: 48px;
    padding: 16px;
    border: 1px solid rgba(139, 142, 255, 0.15);
    box-shadow:
      0 30px 60px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(139, 142, 255, 0.1) inset,
      0 15px 40px rgba(139, 142, 255, 0.1);
    position: relative;
    animation: float 6s ease-in-out infinite;
    animation-delay: 0.5s;
    transform: perspective(1000px) rotateY(-2deg) rotateX(1deg);
    transform-style: preserve-3d;
  }

  .phone-mockup::before {
    content: '';
    position: absolute;
    top: 10%;
    left: -10%;
    width: 50%;
    height: 80%;
    background: linear-gradient(135deg, rgba(139, 142, 255, 0.15) 0%, transparent 60%);
    border-radius: 50%;
    filter: blur(40px);
    z-index: -1;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }

  .phone-mockup__notch {
    width: 120px;
    height: 28px;
    background: transparent;
    border-radius: 0 0 20px 20px;
    margin: 0 auto 0;
    position: relative;
    z-index: 2;
  }

  .phone-mockup__screen {
    background:
      linear-gradient(135deg, rgba(139, 142, 255, 0.08) 0%, transparent 50%),
      linear-gradient(180deg, rgba(40, 37, 48, 0.95) 0%, rgba(30, 28, 35, 0.98) 100%);
    border-radius: 32px;
    overflow: hidden;
    margin-top: -14px;
    box-shadow: 0 0 40px rgba(0, 0, 0, 0.3) inset;
    position: relative;
  }

  .phone-mockup__screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(139, 142, 255, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(139, 142, 255, 0.06) 0%, transparent 40%);
    pointer-events: none;
  }

  .chat-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 24px 18px 14px;
    background: linear-gradient(180deg, rgba(58, 55, 58, 0.4) 0%, transparent 100%);
    border-bottom: 1px solid rgba(139, 142, 255, 0.06);
    backdrop-filter: blur(10px);
  }

  .chat-header__avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent) 0%, #7b7eff 50%, #6b6eff 100%);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.97rem;
    box-shadow: 0 4px 16px rgba(139, 142, 255, 0.4);
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .chat-header__name {
    font-size: 0.92rem;
    font-weight: 600;
    color: var(--light);
  }

  .chat-header__status {
    font-size: 0.72rem;
    color: var(--success);
    font-weight: 500;
  }

  .chat-demo {
    padding: 18px 16px 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-height: 460px;
    overflow: hidden;
  }

  .chat-msg {
    display: flex;
    animation: slideInLeft 0.4s ease-out;
  }

  .chat-msg--user {
    justify-content: flex-end;
    animation: slideInRight 0.4s ease-out;
  }

  .chat-msg__bubble {
    max-width: 85%;
    padding: 11px 15px;
    border-radius: 16px;
    font-size: 0.78rem;
    line-height: 1.55;
  }

  .chat-msg--bot .chat-msg__bubble {
    background: rgba(58, 55, 58, 0.6);
    backdrop-filter: blur(10px);
    border-bottom-left-radius: 6px;
    border: 1px solid rgba(139, 142, 255, 0.08);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .chat-msg--user .chat-msg__bubble {
    background: linear-gradient(135deg, var(--accent) 0%, #7577ff 50%, #6b6eff 100%);
    color: var(--white);
    border-bottom-right-radius: 6px;
    box-shadow: 0 4px 16px rgba(139, 142, 255, 0.35);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .success-msg .chat-msg__bubble {
    border: 1px solid rgba(74, 222, 128, 0.3);
    background: rgba(74, 222, 128, 0.12);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 12px rgba(74, 222, 128, 0.15);
  }

  .invite-link {
    color: var(--accent);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 1.5px dashed rgba(139, 142, 255, 0.5);
    padding: 2px 4px;
    background: rgba(139, 142, 255, 0.08);
    border-radius: 4px;
    transition: all var(--transition);
  }

  .invite-link:hover {
    background: rgba(139, 142, 255, 0.15);
    border-bottom-color: var(--accent);
  }

  .chat-buttons {
    display: flex;
    flex-direction: column;
    gap: 9px;
  }

  .chat-btn {
    display: block;
    padding: 11px 17px;
    background: rgba(139, 142, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(139, 142, 255, 0.25);
    border-radius: 12px;
    font-size: 0.78rem;
    text-align: center;
    color: var(--accent);
    cursor: default;
    transition: all var(--transition);
    font-weight: 500;
  }

  .chat-btn:hover {
    background: rgba(139, 142, 255, 0.15);
    border-color: rgba(139, 142, 255, 0.35);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(139, 142, 255, 0.2);
  }

  .hero__br {
    display: block;
  }

  @media (max-width: 1200px) {
    .hero__visual {
      padding: 40px 30px 50px;
    }

    .phone-mockup {
      transform: perspective(1000px) rotateY(-1deg) rotateX(0deg);
    }
  }

  @media (max-width: 968px) {
    .hero {
      padding: 70px 0 40px;
      min-height: auto;
    }

    .hero__inner {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 64px;
    }

    .hero__subtitle {
      margin: 0 auto 32px;
    }

    .hero__actions {
      justify-content: center;
      margin-bottom: 48px;
    }

    .hero__stats {
      justify-content: center;
    }

    .hero__visual {
      max-width: 400px;
      margin: 0 auto;
      padding: 30px 20px 40px;
    }

    .phone-mockup {
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 65px 0 35px;
    }

    .hero__title {
      font-size: 2.2rem;
    }

    .hero__subtitle {
      font-size: 1.05rem;
      line-height: 1.65;
    }

    .hero__actions {
      margin-bottom: 40px;
    }

    .hero__stats {
      gap: 28px;
    }

    .stat__number {
      font-size: 1.3rem;
    }

    .stat__divider {
      height: 36px;
    }

    .hero__visual {
      padding: 25px 15px 35px;
    }

    .phone-mockup {
      max-width: 330px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 60px 0 30px;
    }

    .hero__br {
      display: inline;
    }

    .hero__badge {
      font-size: 0.8rem;
      padding: 6px 16px;
      margin-bottom: 20px;
    }

    .hero__title {
      font-size: 1.85rem;
      margin-bottom: 20px;
    }

    .hero__subtitle {
      font-size: 1rem;
      margin-bottom: 32px;
    }

    .hero__actions {
      flex-direction: column;
      margin-bottom: 36px;
      gap: 12px;
    }

    .hero__stats {
      gap: 20px;
      flex-wrap: wrap;
      justify-content: center;
    }

    .stat__number {
      font-size: 1.2rem;
    }

    .stat__label {
      font-size: 0.8rem;
    }

    .stat__divider {
      height: 32px;
    }

    .hero__visual {
      padding: 20px 10px 30px;
    }

    .phone-mockup {
      max-width: 310px;
      padding: 12px;
      border-radius: 36px;
      box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.5),
        0 0 0 1px rgba(139, 142, 255, 0.1) inset,
        0 10px 30px rgba(139, 142, 255, 0.1);
    }

    .phone-mockup__notch {
      width: 120px;
      height: 26px;
    }

    .chat-header {
      padding: 20px 16px 12px;
    }

    .chat-demo {
      padding: 16px 12px;
      gap: 10px;
    }

    .chat-msg__bubble {
      text-align: left;
      color: var(--light);
    }

    .chat-msg--user .chat-msg__bubble {
      color: var(--white);
    }
  }
</style>
