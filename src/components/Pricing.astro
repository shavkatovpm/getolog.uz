<section class="section" id="pricing">
  <div class="container">
    <div class="section__header">
      <span class="section__tag">Tariflar</span>
      <h2 class="section__title">Funksionallik barchada bir xil</h2>
      <p class="section__subtitle">Farqi faqat reklama: bepul tarifda Getolog reklamasi ko'rinadi, pullikda — yo'q.</p>
    </div>

    <div class="pricing-grid">
      <div class="pricing-card">
        <div class="pricing-card__header">
          <h3 class="pricing-card__name">Bepul</h3>
          <div class="pricing-card__price">
            <span class="price-amount">0</span>
            <span class="price-currency">so'm</span>
          </div>
        </div>
        <ul class="pricing-card__features">
          <li class="included">To'liq funksionallik</li>
          <li class="included">Karta orqali to'lov</li>
          <li class="included">Bir martalik invite link</li>
          <li class="included">Avtomatik obuna boshqaruvi</li>
          <li class="included">Statistika</li>
          <li class="excluded">Reklama ko'rsatiladi</li>
        </ul>
        <a href="https://t.me/getolog_bot" target="_blank" rel="noopener" class="btn btn--outline btn--full">Boshlash</a>
      </div>

      <div class="pricing-card">
        <div class="pricing-card__header">
          <h3 class="pricing-card__name">1 oylik</h3>
          <div class="pricing-card__price">
            <span class="price-amount">87 000</span>
            <span class="price-currency">so'm/bot</span>
          </div>
        </div>
        <ul class="pricing-card__features">
          <li class="included">To'liq funksionallik</li>
          <li class="included">Karta orqali to'lov</li>
          <li class="included">Bir martalik invite link</li>
          <li class="included">Avtomatik obuna boshqaruvi</li>
          <li class="included">Statistika</li>
          <li class="included">Reklama yo'q</li>
        </ul>
        <a href="https://t.me/getolog_bot" target="_blank" rel="noopener" class="btn btn--outline btn--full">Boshlash</a>
      </div>

      <div class="pricing-card pricing-card--popular">
        <div class="pricing-card__badge">Tavsiya</div>
        <div class="pricing-card__header">
          <h3 class="pricing-card__name">3 oylik</h3>
          <div class="pricing-card__price">
            <span class="price-amount">67 000</span>
            <span class="price-currency">so'm/bot/oy</span>
          </div>
          <div class="price-total">201 000 so'm — bir to'lovda</div>
        </div>
        <ul class="pricing-card__features">
          <li class="included">To'liq funksionallik</li>
          <li class="included">Karta orqali to'lov</li>
          <li class="included">Bir martalik invite link</li>
          <li class="included">Avtomatik obuna boshqaruvi</li>
          <li class="included">Statistika</li>
          <li class="included">Reklama yo'q</li>
          <li class="included">23% tejaysiz</li>
        </ul>
        <a href="https://t.me/getolog_bot" target="_blank" rel="noopener" class="btn btn--primary btn--full">Boshlash</a>
      </div>
    </div>

    <p class="pricing-note">Narxlar har bir bot uchun alohida hisoblanadi</p>
  </div>
</section>

<style>
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    align-items: start;
  }

  .pricing-card {
    background: var(--dark-800);
    border: 1px solid rgba(230, 233, 255, 0.06);
    border-radius: var(--radius-lg);
    padding: 36px 28px;
    transition: all var(--transition);
    position: relative;
  }

  .pricing-card:hover {
    transform: translateY(-4px);
  }

  .pricing-card--popular {
    border-color: var(--accent);
    box-shadow: 0 0 40px var(--accent-glow);
    transform: scale(1.04);
  }

  .pricing-card--popular:hover {
    transform: scale(1.04) translateY(-4px);
  }

  .pricing-card__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    padding: 4px 20px;
    background: var(--accent);
    color: var(--white);
    border-radius: 100px;
    font-size: 0.8rem;
    font-weight: 700;
  }

  .pricing-card__header {
    text-align: center;
    margin-bottom: 28px;
    padding-bottom: 28px;
    border-bottom: 1px solid rgba(230, 233, 255, 0.06);
  }

  .pricing-card__name {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--light-400);
    margin-bottom: 12px;
  }

  .price-amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--white);
  }

  .price-currency {
    font-size: 1rem;
    color: var(--light-400);
    margin-left: 4px;
  }

  .price-total {
    margin-top: 10px;
    font-size: 0.9rem;
    color: var(--accent);
    font-weight: 600;
  }

  .pricing-card__features {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-bottom: 32px;
  }

  .pricing-card__features li {
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .pricing-card__features li::before {
    content: "";
    width: 20px;
    height: 20px;
    min-width: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .included::before {
    background: rgba(74, 222, 128, 0.15);
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 24 24' fill='none' stroke='%234ade80' stroke-width='3'%3E%3Cpath d='M20 6L9 17l-5-5'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
  }

  .excluded {
    color: var(--dark-600);
  }

  .excluded::before {
    background: rgba(248, 113, 113, 0.1);
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='10' viewBox='0 0 24 24' fill='none' stroke='%23f87171' stroke-width='3'%3E%3Cpath d='M18 6L6 18M6 6l12 12'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
  }

  .pricing-note {
    text-align: center;
    margin-top: 32px;
    font-size: 0.9rem;
    color: var(--dark-600);
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card--popular {
      transform: none;
      order: -1;
    }

    .pricing-card--popular:hover {
      transform: translateY(-4px);
    }
  }
</style>
