<style>
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-card {
    background: var(--dark-800);
    border: 1px solid rgba(230, 233, 255, 0.06);
    border-radius: var(--radius-lg);
    padding: 40px 32px;
    transition: all var(--transition);
    position: relative;
  }

  .pricing-card:hover {
    border-color: rgba(139, 142, 255, 0.2);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .pricing-card__header {
    text-align: center;
    margin-bottom: 32px;
    padding-bottom: 32px;
    border-bottom: 1px solid rgba(230, 233, 255, 0.06);
  }

  .pricing-card__name {
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--light);
    margin-bottom: 16px;
  }

  .price-amount {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--white);
  }

  .price-currency {
    font-size: 1rem;
    color: var(--light-400);
    margin-left: 4px;
  }

  .pricing-card__features {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-bottom: 36px;
  }

  .pricing-card__features li {
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .pricing-card__features li::before {
    content: "";
    width: 20px;
    height: 20px;
    min-width: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .included::before {
    background: rgba(74, 222, 128, 0.15);
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='12' viewBox='0 0 24 24' fill='none' stroke='%234ade80' stroke-width='3'%3E%3Cpath d='M20 6L9 17l-5-5'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
  }

  .excluded {
    color: var(--dark-600);
  }

  .excluded::before {
    background: rgba(248, 113, 113, 0.1);
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='10' viewBox='0 0 24 24' fill='none' stroke='%23f87171' stroke-width='3'%3E%3Cpath d='M18 6L6 18M6 6l12 12'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
  }

  .pricing-note {
    text-align: center;
    margin-top: 40px;
    font-size: 0.9rem;
    color: var(--light-400);
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      gap: 20px;
    }

    .pricing-card {
      padding: 32px 24px;
    }

    .pricing-card:hover {
      transform: none;
    }

    .pricing-card__header {
      margin-bottom: 24px;
      padding-bottom: 24px;
    }

    .pricing-card__name {
      font-size: 1.2rem;
    }

    .price-amount {
      font-size: 2.25rem;
    }

    .pricing-card__features {
      gap: 14px;
      margin-bottom: 28px;
    }

    .pricing-card__features li {
      font-size: 0.9rem;
    }
  }
</style>
